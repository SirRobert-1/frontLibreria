@model LibroGenero
@{
    ViewData["Title"] = "Libros";
    ViewData["SubTitle"] = "Agregar Generos";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado"
        asp-action="Index">Listado</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar a los Generos"
        asp-action="Generos" asp-route-id="@Model.Libro?.LibroId">Generos</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h2 class="text-center mb-4">@ViewData["Title"] <small class="text-muted fs-5">@ViewData["SubTitle"]</small></h2>

<h4 class="my-3">Agregar Genero</h4>
<form asp-action="GenerosAgregar" asp-route-id="@Model.Libro?.LibroId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mt-3">
        <div class="card-body small">
            <div class="form-floating mb-3">
                <select class="form-select" asp-for="GeneroId" class="form-control" asp-items="ViewBag.Genero">
                    <option value="">Seleccione un genero</option>
                </select>
                <label asp-for="GeneroId" class="control-label"></label>
                <span asp-validation-for="GeneroId" class="text-danger" />
            </div>
        </div
    </div>
    <div class="text-center mt-3">
        <button id="btnEnviar" type="submit" class="btn btn-sm btn-primary">Agregar</button>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Generos" asp-route-id="@Model.Libro?.LibroId" title="Cancelar">Cancelar</a>
    </div>
</form>

<h4 class="my-3">libros</h4>
<partial name="_CardPartial" model="@Model.Libro" />